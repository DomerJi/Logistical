<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.logistical.fd.activity.ModifyPDActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="@color/grayDeep"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="旧密码"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/modifypd_oldpd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="输入旧密码"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/grayDeep"
            android:background="@null"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grayDeep"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/grayDeep"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/modifypd_newpd1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="输入新密码"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/grayDeep"
            android:background="@null"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grayDeep"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="确认新密码"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/modifypd_newpd2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="确认新密码"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/grayDeep"
            android:background="@null"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/grayDeep"
        />
    <Button
        android:id="@+id/modifypd_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/login_btn_selector"/>
</LinearLayout>
