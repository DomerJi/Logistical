<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/slide_head"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/head_slid" />

    <TextView
        android:id="@+id/slide_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_gravity="center_horizontal"
        android:text="手机号"
        android:textColor="@color/black" />
    <!--///////////////////////////////////////-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_defaut"
        android:background="@color/grayDeep"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/slide_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人信息"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_20sp"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/base_btn_selector"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_defaut"
        android:background="@color/grayDeep" />


    <TextView
        android:id="@+id/slide_change_pas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_20sp"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/base_btn_selector"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_defaut"
        android:background="@color/grayDeep" />

    <TextView
        android:id="@+id/slide_offline_manger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="离线管理"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_20sp"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/base_btn_selector"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_defaut"
        android:background="@color/grayDeep" />



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_defaut"
        android:background="@color/grayDeep"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/slide_back_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:gravity="center"
        android:textColor="@color/google_red"
        android:textSize="@dimen/font_size_20sp"
        android:padding="@dimen/fab_margin"
        android:background="@drawable/base_btn_selector"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_defaut"
        android:background="@color/grayDeep" />






</LinearLayout>
